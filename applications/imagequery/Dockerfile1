FROM ubuntu:bionic
RUN apt-get update
RUN apt-get install python3 python3-pip -y
RUN pip3 install python-resize-image
RUN pip3 install pillow

ADD imagequery/1_imageResizer/app /container/ 
ADD imagequery/1_imageResizer/images /container/ 
ADD simplerpc/app /container/

CMD ["python3", "/container/server.py", "1", "8000"]

EXPOSE 8000