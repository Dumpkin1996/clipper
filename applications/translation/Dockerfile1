FROM ubuntu:bionic
RUN apt-get update
RUN apt-get install python3 python3-all-dev python3-pip build-essential swig git libpulse-dev libasound2-dev -y
RUN pip3 install numpy
RUN pip3 install scipy
RUN pip3 install grpcio
RUN pip3 install protobuf
RUN pip3 install pocketsphinx
RUN pip3 install SpeechRecognition

ADD translation/container1/app /container/
ADD simplerpc/app /container/

CMD ["python3", "/container/server.py"]

EXPOSE 8000