FROM ubuntu:bionic
RUN apt-get update
RUN apt-get install python3 python3-pip -y
RUN pip3 install -i https://pypi.tuna.tsinghua.edu.cn/simple scipy
RUN pip3 install -i https://pypi.tuna.tsinghua.edu.cn/simple numpy
RUN pip3 install -i https://pypi.tuna.tsinghua.edu.cn/simple pillow
RUN pip3 install -i https://pypi.tuna.tsinghua.edu.cn/simple tensorflow

ADD auto_pilot/2_Algo1/app /container/
ADD simplerpc/app /container/

CMD ["python3", "/container/server.py", "2", "9000"]

EXPOSE 9000