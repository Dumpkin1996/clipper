FROM ubuntu:bionic
RUN apt-get update
RUN apt-get install python3 python3-pip -y
RUN pip3 install numpy

# container will have: predict.py, server.py
ADD imagequery/c4_questionAnswering/app /container/
ADD simplerpc/app /container/

CMD ["python3", "/container/server.py", "4", "12000"]

EXPOSE 12000