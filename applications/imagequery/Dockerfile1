FROM ubuntu:bionic
RUN apt-get update
RUN apt-get install python3 python3-pip -y
RUN pip3 install SpeechRecognition

# container will have: speech.wav, predict.py, server.py
ADD imagequery/c1_speechRecognition/app /container/
ADD simplerpc/app /container/
RUN ["ls" , "/container"]

CMD ["python3", "/container/server.py", "1", "8000"]

EXPOSE 8000